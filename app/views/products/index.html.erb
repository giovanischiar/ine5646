<% unless notice.nil? %>
  <div class="alert alert-info"><%= notice %></div>
<% end %>

<h1>Products</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.code %></td>
        <td><%= link_to 'Show', product, :class => "btn" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), :class => "btn" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, :class => "btn btn-primary" %>
